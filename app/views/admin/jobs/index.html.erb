<div class="pull-right">
  <%= link_to("Add a job", new_admin_job_path, :class => "btn btn-default") %>
</div>

<table class="table table-boldered table-striped custab">
  <thead>
    <tr>
      <th>Job title</th>
      <th>Received resumes</th>
      <th>wage_lower_bound</th>
      <th>wage_upper_bound</th>
      <th>Options</th>
      <th>created_at</th>
    </tr>
  </thead>

  <tbody>
  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= render_job_status(job) %>
      <%= link_to job.title, admin_job_path(job) %>
    </td>
    <td>
      <%= link_to(job.resumes.count,admin_job_resumes_path(job))  %>
    </td>
    <td>
      <%= job.wage_lower_bound %>
    </td>
    <td>
      <%= job.wage_upper_bound %>
    </td>
    <td>
      <%= link_to("Edit", edit_admin_job_path(job), :class=>"btn btn-sx btn-info") %>
      <%= link_to "Delete", admin_job_path(job), :method => :delete, :class=>"btn btn-sx btn-danger", :data => {:confirm => "Are you sure?"} %>
      <% if job.is_hidden %>
      <%= link_to("Publish", publish_admin_job_path(job), :method => :post , :class => "btn btn-sx btn-success") %>
      <% else %>
      <%= link_to("Hide", hide_admin_job_path(job), :method => :post,  :class => "btn btn-sx btn-warning")%>
      <% end %>
    </td>
    <td><%= job.created_at %></td>
  </tr>
  <% end %>
</tbody>
</table>
